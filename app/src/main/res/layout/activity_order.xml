<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".ui.main.view.fragments.AccountFragment">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:backgroundTint="@color/white"
                android:layout_marginTop="40dp"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back"/>

                <TextView
                    android:id="@+id/textview_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Orders"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>

            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.02"
                        android:text="LQNSU346JK"
                        android:textColor="#223263"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/my_order1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t1"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Order at Lafyuu : August 1, 2017"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_order2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_order1"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Order Status"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/shippingone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="170dp"
                        android:layout_marginTop="90dp"
                        android:layout_toEndOf="@id/my_order2"
                        android:text="Shipping"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/my_order3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_order2"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Items"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Itemone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="165dp"
                        android:layout_marginTop="130dp"
                        android:layout_toEndOf="@id/my_order3"
                        android:text="2 Items purchased"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/my_order4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_order3"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Profit from customer"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/profit_from_customerone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="170dp"
                        android:layout_toEndOf="@id/my_order4"
                        android:fontFamily="@font/nunito_sans_extra_bold"
                        android:text="â‚µ67.90"
                        android:textColor="#1099EE"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/my_order5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_order4"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="Price"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/priceone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="235dp"
                        android:layout_marginTop="210dp"
                        android:layout_toEndOf="@id/my_order5"
                        android:fontFamily="@font/nunito_sans_extra_bold"
                        android:text="$299,43"
                        android:textColor="#1099EE"
                        android:textSize="13sp" />


                </RelativeLayout>



            </LinearLayout>
            <Button
                android:id="@+id/Edit_Order_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ratings_button"
                android:text="Edit Order Details"
                android:textAllCaps="false" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>