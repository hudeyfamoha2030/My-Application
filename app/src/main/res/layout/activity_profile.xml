<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.main.view.fragments.AccountFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/Arrow_backword"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/textview_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"/>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_below="@id/toolbar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user"/>


                <TextView
                    android:id="@+id/tvuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximus Gold"
                    android:layout_toRightOf="@id/user"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primary"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv2user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="derlaxy"
                    android:layout_toEndOf="@id/user"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_below="@id/tvuser"
                    android:letterSpacing="0.02"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="2dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="12sp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12sp"
                    android:paddingTop="8sp"
                    android:paddingEnd="12sp">

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:text="Gender"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/gender_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Male"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_forward"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12sp"
                    android:paddingTop="8sp"
                    android:paddingEnd="12sp">

                    <TextView
                        android:id="@+id/my_order2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:text="Birthday"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/shipping_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="12-12-1999"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_forward"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12sp"
                    android:paddingTop="8sp"
                    android:paddingEnd="12sp">

                    <TextView
                        android:id="@+id/my_order3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Itemone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Derlaxy@yahoo.com"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_forward"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12sp"
                    android:paddingTop="8sp"
                    android:paddingEnd="12sp">

                    <TextView
                        android:id="@+id/my_order4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone Number"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/profit_from_customerone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_extra_bold"
                        android:text="(307) 555-0133"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_forward"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12sp"
                    android:paddingTop="8sp"
                    android:paddingEnd="12sp">

                    <TextView
                        android:id="@+id/my_order5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enter Password"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/priceone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_extra_bold"
                        android:text="•••••••••••••••••"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_forward"/>
                </LinearLayout>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Edit_Button"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_shape"
                android:text="Notify Me"
                android:visibility="visible"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15sp"
                android:paddingRight="24dp"
                android:paddingLeft="24dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>