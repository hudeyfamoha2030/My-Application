<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.main.view.fragments.AccountFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/white"
            android:layout_marginTop="40dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_below="@id/toolbar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user"/>


                <TextView
                    android:id="@+id/tvuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximus Gold"
                    android:layout_toRightOf="@id/user"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv2user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="derlaxy"
                    android:layout_toEndOf="@id/user"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_below="@id/tvuser"
                    android:letterSpacing="0.02"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="2dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:layout_toEndOf="@id/t1"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="185dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forward"
                    android:layout_toEndOf="@id/tvgender"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvbirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-12-2000"
                    android:layout_toEndOf="@id/t2"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="130dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forward"
                    android:layout_toEndOf="@id/tvbirthday"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Derlaxy@yahoo.com"
                    android:layout_toEndOf="@id/t3"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="85dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forward"
                    android:layout_toEndOf="@id/tvemail"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(307) 555-0133"
                    android:layout_toEndOf="@id/t4"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forward"
                    android:layout_toEndOf="@id/tvphone"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•••••••••••••••••"
                    android:layout_toEndOf="@id/t5"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forward"
                    android:layout_toEndOf="@id/tvchange"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"/>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>