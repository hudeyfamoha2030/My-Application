<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.view.fragments.AccountFragment"
        >
        <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <include layout="@layout/toolbar_main_home"/>
    </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@id/toolbar">

            <RelativeLayout
                android:id="@+id/layout_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"/>


                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:layout_toRightOf="@id/i1"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_orders"/>


                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My earnings"
                    android:layout_toRightOf="@id/i2"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_orders"/>


                <TextView
                    android:id="@+id/tv_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My orders"
                    android:layout_toRightOf="@id/i3"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_delivery"/>


                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery prices"
                    android:layout_toRightOf="@id/i4"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/i5"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_help"/>


                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:layout_toRightOf="@id/i5"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/i6"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_help"/>


                <TextView
                    android:id="@+id/t6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:layout_toRightOf="@id/i6"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/i7"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_help"/>


                <TextView
                    android:id="@+id/t7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:layout_toRightOf="@id/i7"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/i8"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_help"/>


                <TextView
                    android:id="@+id/t8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_toRightOf="@id/i8"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#223263"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>