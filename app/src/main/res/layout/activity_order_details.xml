<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.activities.OrderDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/textview_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order details"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_sans_bold"
            android:gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">


        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/step_progress"
            android:layout_width="wrap_content"
            android:layout_height="11sp"
            app:spb_currentStateNumber="three"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:spb_maxStateNumber="four"
            app:spb_stateDescriptionSize="12sp"
            app:spb_stateBackgroundColor="#BDBDBD"
            app:spb_stateForegroundColor="#1099EE"
            app:spb_stateNumberBackgroundColor="#808080"
            app:spb_descriptionTopSpaceIncrementer="8dp"
            app:spb_stateNumberForegroundColor="#eeeeee"
            app:spb_currentStateDescriptionColor="#1099EE"
            app:spb_stateDescriptionColor="#808080"
            app:spb_animateToCurrentProgressState="true"
            app:spb_checkStateCompleted="true"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textSize="22dp"
            android:textColor="#223263"
            android:fontFamily="@font/nunito_sans_extra_bold"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
            android:id="@+id/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/blue_shoe"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginStart="250dp"
                android:layout_toEndOf="@+id/i1"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                app:borderWidth="0dp"
                app:collapsedSize="36dp"
                app:fabCustomSize="24dp"
                app:icon="@drawable/ic_red_love"
                app:iconSize="18dp"
                app:iconTint="#FF0000"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@id/i1"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.02"
                android:text="Nike Air Zoom Pegasus \n36 Miami"
                android:textColor="#223263"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_profile"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/i1"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.02"
                android:text="$299,43"
                android:textColor="#1099EE"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp">

            <ImageView
                android:id="@+id/i2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/red_shoe"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="wrap_content"
                android:layout_gravity="top|end"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                app:borderWidth="0dp"
                app:collapsedSize="36dp"
                android:layout_toEndOf="@+id/i2"
                android:layout_marginStart="250dp"
                app:fabCustomSize="24dp"
                app:icon="@drawable/ic_grey_love"
                app:iconSize="18dp" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nike Air Zoom Pegasus\n 36 Miami"
                android:layout_toEndOf="@id/i2"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#223263"
                android:letterSpacing="0.02"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$299,43"
                android:layout_toEndOf="@id/i2"
                android:layout_below="@+id/t2"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#1099EE"
                android:letterSpacing="0.02"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Details"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#223263"
                android:letterSpacing="0.02"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/my_order2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Shipping"
                android:layout_marginStart="15dp"
                android:layout_below="@id/t1"
                android:textSize="16sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/shippingone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="January 16, 2015"
                android:layout_marginStart="130dp"
                android:layout_toEndOf="@id/my_order2"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="65dp"/>
            <TextView
                android:id="@+id/my_order3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping"
                android:layout_marginStart="15dp"
                android:layout_below="@id/my_order2"
                android:textSize="16sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/Itemone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POS Reggular"
                android:layout_marginStart="195dp"
                android:layout_toEndOf="@id/my_order3"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="105dp"/>

            <TextView
                android:id="@+id/my_order4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_order3"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="No. Resi"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/profit_from_customerone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000192848573"
                android:layout_marginStart="190dp"
                android:layout_toEndOf="@id/my_order4"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="145dp"/>
            <TextView
                android:id="@+id/my_order5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginStart="15dp"
                android:layout_below="@id/my_order4"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/priceone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2727 Lakeshore Rd \n undefined Nampa,\n Tennessee 78410"
                android:layout_marginStart="160dp"
                android:layout_toEndOf="@id/my_order5"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="185dp"/>


        </RelativeLayout>


        <Button
            android:id="@+id/Notify_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ratings_button"
            android:text="Notify Me"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>